<!-- 搜索 -->
<van-search
  disabled
  placeholder="搜索您喜欢的歌曲"
  shape="round"
  background="#fafafa"
  bind:click-input="gotoSearch"
/>
<!-- 轮播图 -->
<swiper
  indicator-dots
  indicator-active-color="red"
  autoplay
  circular
  duration="1000"
  style="height: {{swiperHeight}}px"
>
  <swiper-item wx:for="{{banners}}" wx:key="bannerId">
    <image
      src="{{item.pic}}" 
      mode="widthFix" 
      bind:load="swiperImageLoaded"
      class="swiper-image"
    />
  </swiper-item>
</swiper>
