.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
}

.header-right {
  font-size: 28rpx;
}

.slot:empty + .default {
  display: flex;
}

.default {
  display: none;
  align-items: center;
  color: #888;
}

.icon {
  width: 50rpx;
  height: 50rpx;
}
